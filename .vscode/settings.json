  "prettier.prettierPath": "./node_modules/prettier",
  "search.exclude": {
    "package-lock.json": true,
    "yarn.lock": true,
    "**/node_modules": true,
    "**/build": true,
    "**/bundle": true,
    "**/dist": true,
    "**/.git": true,
    "**/.vscode": true,
    "**/src-tauri/target": true,
    "**/Cargo.lock": true,
    "**/pnpm-lock.yaml": true,
    "**/.yaml": true
