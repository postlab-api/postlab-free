{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000"
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all"
  },
  "productName": "Hoppscotch",
  "mainBinaryName": "Hoppscotch",
  "version": "25.1.1",
  "identifier": "io.hoppscotch.desktop",
  "plugins": {},
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "label": "main",
        "title": "Hoppscotch",
        "visible": false,
        "fullscreen": false,
        "resizable": true,
        "width": 800,
        "height": 600,
        "dragDropEnabled": false,
        "useHttpsScheme": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
